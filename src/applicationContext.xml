<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<!-- add entry to enable component scanning -->

	<!-- define beans here -->
	<!-- id is an alias /-->
	<bean id="myCoach"
		class="com.cks.springdemo.BaseballCoach"> <!-- fully qualified class name of implementation class -->
	</bean>

	<!--
		Add a logger config to see logging messages.
		-For more detailed logs, set values to "FINEST"
		-ID is alias , class is path to implementation we want to use
		-init-method method that will be called
	-->
	<bean id="myLoggerConfig" class="com.cks.springdemo.MyLoggerConfig" init-method="initLogger">
		<property name="rootLoggerLevel" value="FINE"></property>
		<property name="printedLoggerLevel" value="FINE"></property>
	</bean>
	<!--context:component-scan base-package="com.cks.springdemo" /-->

</beans>





